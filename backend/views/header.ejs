<header class="global-header">
  <% user = (typeof user != "undefined" ? user : false) %>
  <div class="logo">
    <a href="/">
      <h1>Atten+</h1>
    </a>
  </div>
  <div class="header-right">
    <a href="/create" class="upload-btn"> 챌린지 올리기 </a>
    <% if (!user) { %>
    <!-- NOTE: 로그인 안 한 경우 -->
    <a class="login-btn" href="/sign">
      <i class="icon-profile"></i>
      <span class="login-btn-text">로그인/회원가입</span>
    </a>

    <%}else{%>
    <!-- NOTE: 로그인 한 경우 -->
    <button type="button" class="user-btn" onclick="toggleMenuList()">
      <div class="user-btn-wrapper">
        <img
          src="data:<%=user.img.contentType%>;base64,
        <%=user.img.data.toString('base64')%>"
          alt=""
          class="user-profile-img"
        />
        <span class="user-btn-text"><%=user.name%></span>
      </div>
    </button>

    <div class="user-menu-modal">
      <ol class="user-menu-list">
        <a href="/user"><li class="user-menu-item">프로필</li></a>
        <li class="user-menu-item divider">
          <div></div>
        </li>
        <a href="/sign/logout"><li class="user-menu-item">로그아웃</li></a>
      </ol>
    </div>
    <%}%>
  </div>
</header>
<nav class="global-nav">
  <div class="nav-wrapper">
    <ul class="nav-list">
      <li class="nav-item">
        <a href="/"> <i class="icon-home"></i>홈 </a>
      </li>
      <li class="nav-item"><a href="/board?category=운동">운동</a></li>
      <li class="nav-item"><a href="/board?category=정서">정서</a></li>
      <li class="nav-item"><a href="/board?category=생활">생활</a></li>
      <li class="nav-item"><a href="/board?category=역량">역량</a></li>
      <li class="nav-item"><a href="/board?category=취미">취미</a></li>
    </ul>
    <button type="button" class="search-wrapper">
      <input type="text" placeholder="검색어를 입력해주세요." />
      <i class="icon-search"></i>
    </button>
  </div>
  <div class="line"></div>
</nav>
